<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="app_Theme.NoActionBar.MaoTrailer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_color_accent</item>
        <item name="colorPrimaryVariant">@color/app_color_primary_dark</item>
        <item name="colorOnPrimary">@color/app_color_accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/app_color_accent</item>
    </style>

    <style name="app_Theme.Mao_trailer_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryVariant">@color/app_color_primary_dark</item>
        <item name="colorOnPrimary">@color/app_color_accent</item>

        <item name="colorSecondary">@color/app_teal_200</item>
        <item name="colorSecondaryVariant">@color/app_teal_700</item>
        <item name="colorOnSecondary">@color/app_black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="app_Theme.NoActionBar.MaoTrailer.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_white</item>
        <item name="android:statusBarColor">@color/app_color_accent</item>
    </style>

</resources>